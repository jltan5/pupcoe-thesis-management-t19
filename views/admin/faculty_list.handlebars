<div class="container">
	<div class="border border-danger rounded p-5 mx-5">
    <a href="/admin/faculty/create" class="btn btn-light" style="float: right; margin-bottom: -25px;">Add Faculty</a>
    <div>
      <h3>FACULTY</h3>
    </div>

    <div class="mt-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Admin?</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each facultyList}}
            <tr>
              <td>{{this.first_name}} {{this.middle_name}} {{this.last_name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.phone_number}}</td>
              <td>{{this.is_admin}}</td>
              <td><a href="#">view</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>
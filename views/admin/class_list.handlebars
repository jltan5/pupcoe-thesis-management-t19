<div class="container">
  <div class="border border-danger rounded p-5 mx-5">
    <a href="/admin/class/create" class="btn btn-light" style="float: right; margin-bottom: -25px;">Add Class</a>
    <div >
      <h3>CLASS</h3>
    </div>
 
    <div class=" mt-5">
      <table class="table table-hover">
        <thead align="center">
          <tr>
            <th>BATCH</th>
            <th>SECTION</th>
            <th>ADVISER</th>
            <th>ACTION</th>
          </tr>
        </thead>
        <tbody align="center">
          {{#each classList}}
            <tr>
              <td>{{this.batch}}</td>
              <td>{{this.section}}</td>
              <td>{{this.prefix}} {{this.first_name}} {{this.middle_name}} {{this.last_name}} {{this.suffix}}</td>
              <td>
                <form action="/admin/class/list" method="post">
                  <input type="hidden" value="{{this.id}}" name="classId">
                  <input type="hidden" value="{{this.advisor_id}}" name="advisorId">
                  <input type="submit" class="btn" value="View" name="view">
                 
                  <button class="deleteButton btn" value="{{this.id}}">Delete</button>
                </form></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>


<div class="container">
  <div class="border border-danger rounded p-2 mb-4">

      <h6>Batch {{classData.batch}}</h6>
      <h6>Section {{classData.section}}</h6>
      <h6>Adviser: {{classData.first_name}} {{classData.middle_name}} {{classData.last_name}} </h6>

    <div style="margin-top: -60px; float: right"> <center>
      <input type="button" class="btn btn-light" name="" value="Add Students" data-toggle="modal" data-target="#exludedStudentsModal">
    </center>
  </div>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th width="20%">Student Number</th>
          <th width="30%">Name</th>
          <th width="25%">Email</th>
          <th width="25%">Phone</th>
        </tr>
      </thead>
      <tbody>
        {{#each studentsData}}
          <tr>
            <td>{{this.student_id}}</td>
            <td>{{this.first_name}} {{this.middle_name}} {{this.last_name}} {{this.suffix}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>



<!-- Modal -->
<div id="exludedStudentsModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      
      <div class="modal-header">
        <h4 class="modal-title">Students</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        
      </div>
      
      <div class="modal-body">
        <form method="post" action="/admin/class/list/add-students">
        <input type="hidden" name="classId" value="{{classData.id}}">
        <div>
          <select multiple style="width: 100%" size="10" name="studentIdToAdd">
            {{#each excludedStudentsData}}
              <option value="{{this.id}}">{{this.student_id}} - {{this.first_name}} {{this.middle_name}} {{this.last_name}}</option>
            {{/each}}
          </select>
          <div align="center">
            <input type="submit" class="btn btn-danger" name="addStudents" value="Add Students">
          </div>
        </div>
        </form>
      </div>
    </div>

  </div>
</div>